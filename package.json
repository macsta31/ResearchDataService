{
  "name": "researchdataservice",
  "private": true,
  "workspaces": [
    "api",
    "workers",
    "shared"
  ],
  "version": "1.0.0",
  "main": "server.ts",
  "scripts": {
    "build:shared": "tsc --build shared",
    "build:api": "pnpm --filter api run build:prod",
    "start:api": "pnpm --filter api run start",
    "dev:api": "pnpm --filter api run start:dev",
    "build:workers": "tsc --project workers/tsconfig.json",
    "start:workers": "node workers/dist/index.js",
    "dev:workers": "ts-node-dev --project workers/tsconfig.json workers/src/index.ts",
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:workers\"",
    "build": "pnpm run build:shared && pnpm run build:api && pnpm run build:workers"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/pg": "^8.15.4",
    "bullmq": "^5.56.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "install": "^0.13.0",
    "ioredis": "^5.6.1",
    "node-pg-migrate": "^8.0.3",
    "npm": "^11.4.2",
    "pg": "^8.16.3",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "@types/cors": "^2.8.19",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
